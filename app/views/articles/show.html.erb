<div class="container">

  <br/>
  <div class="well">
    <p>
      <strong>Title</strong><br>
      <%= @article.title %>
    </p>

    <p>
      <strong>Text</strong><br>
      <%= @article.text %>
    </p>
  </div>

    <h2>Comments</h2>

    <table class="table">
      <tr>
        <th>Commenter:</th>
        <th>Comment:</th>
        <th></th>
      </tr>
      <%= render @article.comments %>
    </table>

    <h2>Add a comment:</h2>
    <%= render 'comments/form' %>

    <%= link_to 'Edit', edit_article_path(@article) %> |
    <%= link_to 'Back', articles_path %>
</div>


